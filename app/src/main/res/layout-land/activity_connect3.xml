                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="5dp"
                        android:backgroundTint="#FFFFFF"
                        app:cornerRadius="100dp" />

