<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Layout Exercise"
            android:textAllCaps="false"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ButtonExercise"
            android:textAllCaps="false"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculator"
            android:textAllCaps="false"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/mainBtn5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Midterm"
            android:textAllCaps="false"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Match 3 / Connect 3"
            android:textAllCaps="false"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/mainBtn6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Passing Intents"
            android:textAllCaps="false"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/mainBtn7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fragments"
            android:textAllCaps="false"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/mainBtn8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menus"
            android:textAllCaps="false"
            app:cornerRadius="50dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>